<!DOCTYPE html>
<html>
  <head>
    <% include frame/head %> 
    <title></title>
  </head>
  <body>
  <% include frame/nav %> 
  <div class="container">
    <div class="col-md-2"></div>
    <div class=" col-md-8">
      <br>
      <h2 class="text-center">
          Look for a Video on Youtube
      </h2>
      <br>
      <form id="searchForm" autocomplete="off">
        <div class="form-group">
          <input class="form-control" type="text" id="search" placeholder="Search" required>
        </div>
        <div class="form-group">
            <button id="btn" class="btn btn-danger btn-block">
                Search Videos
            </button>
        </div>
      </form>
      <br>
      <form id="linkForm" autocomplete="off">
        <div class="form-group">
          <input class="form-control" type="text" id="link" placeholder="Link" required>
        </div>
        <div class="form-group">
            <button id="btn" class="btn btn-danger btn-block">
                Find Video
            </button>
        </div>
      </form>

      
      <table style="display: none;" id="table" class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Visit Channel</th>
            <th>Add Video</th>
          </tr>
        </thead>

        <input type="hidden" id="playlistId" value="<%=playlist_id%>" />
        <input type="hidden" id="owner" value="<%=owner%>" />

        <tbody id="results">
        </tbody>
      </table>

    </div>
    <div class="col-md-2"></div>
  </div>
</body>
  <% include frame/script %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.4.4/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <script src="./javascripts/addVideo.js"></script>
</html>
